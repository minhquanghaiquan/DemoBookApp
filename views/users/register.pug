extends ../layouts/navbar
block content
  .container
    .row
      .col-sm-9.col-md-7.col-lg-5.mx-auto
        .card.card-signin.my-5
          .card-body
            h3.card-title.text-center 
              b Register
            if errors
              each error in errors
                .alert.alert-danger=error
            form.form-signin(action='/user/register', method='POST')
              .form-label-group
                label(for='name') Name
                input#name.form-control(type='text', placeholder='Your Name', required='', autofocus='',name='name')
              .form-label-group
                label(for='email') Email
                input#email.form-control(type='email', placeholder='Your Email', required='', autofocus='',name='email')
              .form-label-group.mb-5
                label(for='password') Password
                input#password.form-control(type='password', placeholder='Your Password', required='', autofocus='',name='password')
              button.btn.btn-lg.btn-primary.btn-block.text-uppercase.mb-5(type='submit') Register
              a(href='/user/login') Login